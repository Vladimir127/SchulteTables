<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="SchulteResultsFragment"
    android:background="@color/background">

    <TextView
        android:id="@+id/result_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textAllCaps="true"
        android:text="Ваш результат"
        android:textSize="32dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lives_over_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Закончились жизни"
        android:textSize="20dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/result_header_text_view"
        app:layout_constraintBottom_toTopOf="@id/result_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textAllCaps="true"
        android:text="0:00:00"
        android:textSize="48dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/result_header_text_view"
        android:fontFamily="sans-serif-light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/menu_text_view"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/menu"
        android:textColor="@color/date_dark"
        android:textSize="14sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/repeat_text_view"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/repeat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/violet_gradient_round"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/repeat1"
        android:textColor="@color/font_light"
        android:textSize="14sp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/menu_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>